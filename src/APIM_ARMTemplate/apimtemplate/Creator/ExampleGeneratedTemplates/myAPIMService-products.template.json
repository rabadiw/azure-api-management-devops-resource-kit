{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "description": "a test product",
        "terms": "some terms",
        "subscriptionRequired": true,
        "approvalRequired": true,
        "subscriptionsLimit": 1,
        "state": "notPublished",
        "displayName": "platinum"
      },
      "name": "[concat(parameters('ApimServiceName'), '/platinum')]",
      "type": "Microsoft.ApiManagement/service/products",
      "apiVersion": "2019-01-01",
      "dependsOn": []
    },
    {
      "properties": {
        "value": "<policies>\n  <inbound>\n    <set-backend-service backend-id=\"myBackend\" />\n    <rate-limit-by-key calls=\"3\" renewal-period=\"15\" counter-key=\"@(context.Subscription.Id)\" />\n    <base />\n  </inbound>\n  <backend>\n    <base />\n  </backend>\n  <outbound>\n    <base />\n  </outbound>\n  <on-error>\n    <base />\n  </on-error>\n</policies>",
        "format": "rawxml"
      },
      "name": "[concat(parameters('ApimServiceName'), '/platinum/policy')]",
      "type": "Microsoft.ApiManagement/service/products/policies",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'platinum')]"
      ]
    }
  ]
}